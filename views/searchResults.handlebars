
    <div class="container">
        <div id="recipe-cards" class="section">

            <!--   Returned Recipes Section   -->
        </div>
    </div>

    <script id="card-template" type="text/x-handlebars-template">

        <div class="col s12 m4">
            <div class="card" style="width: 315px">
                <div class="card-image" style="background-image: url({{recipe.image}}); height: 320px">
                </div>
                <div class="card-block">
                    <h4 class="card-title">({{recipe.label}})</h4>
                    <p class="card-text">({{recipe.ingredientLines}})</p>
                    <div>
                        <button class="btn btn-warning my-2 my-sm-0" id="addToMealPlan" type="submit">Add to Meal Plan</button>
                        <button class="btn btn-warning my-2 my-sm-0" id="addToFavorties" type="submit">Add to Favorites</button>
                    </div>
                </div>
            </div>
        </div>

    </script>
   
